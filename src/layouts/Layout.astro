---
import "../styles/global.css";
import { UserMenu } from "@/components/auth/UserMenu";
import type { AuthUserWithProfile } from "@/types";

interface Props {
  title?: string;
  showHeader?: boolean;
}

const { title = "Billzilla", showHeader = true } = Astro.props;

// Pobierz dane użytkownika z middleware (już zawiera pełny profil)
const user: AuthUserWithProfile | null = Astro.locals.user;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Billzilla - Zarządzaj rachunkami grupowymi z łatwością" />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col">
    {
      showHeader && (
        <header class="sticky top-0 z-40 border-b border-gray-100 bg-white/95 backdrop-blur-sm shadow-sm transition-all duration-300">
          <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
            <a
              href="/"
              class="flex items-center gap-3 transition-all duration-300 ease-out hover:opacity-80 hover:scale-105"
              aria-label="Billzilla - Strona główna"
            >
              <img src="/billzilla-logo.png" alt="Billzilla logo" class="h-10 w-10 rounded-xl" />
              <span class="text-xl font-bold tracking-tight text-foreground">Billzilla</span>
            </a>
            <nav class="flex items-center gap-4" role="navigation" aria-label="Główna nawigacja">
              {user && <UserMenu user={user} client:load />}
            </nav>
          </div>
        </header>
      )
    }
    <main class="flex-1">
      <slot />
    </main>
    <footer class="border-t border-gray-100 bg-white">
      <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <div class="flex justify-center gap-6 text-sm text-gray-600">
          <a href="/about" class="hover:text-primary transition-colors">O aplikacji</a>
        </div>
        <p class="mt-4 text-center text-xs text-gray-500">© 2025 Billzilla. Wszystkie prawa zastrzeżone.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  html {
    margin: 0;
    padding: 0;
  }
</style>
